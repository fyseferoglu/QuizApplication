<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fyusuf.quizapplication.TrainingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="word!"
        android:background="#255c99"
        android:textColor="#dfdddd"
        android:textSize="30sp"
        android:id="@+id/word" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="meaning of word!"
        android:textSize="30sp"
        android:background="#406e8e"
        android:textColor="#dfdddd"
        android:id="@+id/mean" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Another Word!"
        android:background="#427aa1"
        android:id="@+id/anotherword"
        android:textColor="#dfdddd"
        android:layout_weight="0"
        android:onClick="getAnotherWord" />





</LinearLayout>
